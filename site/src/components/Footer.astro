---
import siteConfig from '../config/site.json';

const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-900 text-white py-12">
  <div class="container mx-auto px-6">
    <div class="grid md:grid-cols-4 gap-8 mb-8">
      <!-- Brand -->
      <div>
        <h3 class="text-2xl font-bold mb-4 gradient-text">Victory Road</h3>
        <p class="text-gray-400 text-sm">
          The ultimate Pokemon TCG deck list generator for competitive players.
        </p>
      </div>
      
      <!-- Quick Links -->
      <div>
        <h4 class="font-semibold mb-4">Quick Links</h4>
        <ul class="space-y-2 text-gray-400 text-sm">
          <li><a href="#features" class="hover:text-white transition-colors">Features</a></li>
          <li><a href="#download" class="hover:text-white transition-colors">Download</a></li>
          <li><a href={siteConfig.github.url} target="_blank" rel="noopener noreferrer" class="hover:text-white transition-colors">Source Code</a></li>
        </ul>
      </div>
      
      <!-- Resources -->
      <div>
        <h4 class="font-semibold mb-4">Resources</h4>
        <ul class="space-y-2 text-gray-400 text-sm">
          <li><a href={siteConfig.links.issues} target="_blank" rel="noopener noreferrer" class="hover:text-white transition-colors">Report Issue</a></li>
          <li><a href={siteConfig.links.releases} target="_blank" rel="noopener noreferrer" class="hover:text-white transition-colors">Release Notes</a></li>
          <li><a href={siteConfig.links.wiki} target="_blank" rel="noopener noreferrer" class="hover:text-white transition-colors">Documentation</a></li>
        </ul>
      </div>
      
      <!-- Community -->
      <div>
        <h4 class="font-semibold mb-4">Community</h4>
        <div class="flex space-x-4">
          <!-- GitHub -->
          <a href={siteConfig.social.github} 
             target="_blank" 
             rel="noopener noreferrer"
             class="w-10 h-10 bg-gray-800 hover:bg-gray-700 rounded-lg flex items-center justify-center transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
    
    <!-- Divider -->
    <div class="border-t border-gray-800 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center text-sm text-gray-400">
        <p>&copy; {currentYear} Victory Road. Open source project.</p>
        <p class="mt-2 md:mt-0">
          Not affiliated with Nintendo or The Pok√©mon Company.
        </p>
      </div>
    </div>
  </div>
</footer>