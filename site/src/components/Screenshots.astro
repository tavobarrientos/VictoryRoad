---
import screenshot from '../assets/capture.png';
---

<section class="py-24 bg-gradient-to-br from-gray-50 to-white">
  <div class="container mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4 gradient-text">
        Beautiful & Intuitive Interface
      </h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Designed with competitive players in mind
      </p>
    </div>

    <!-- Screenshot Showcase -->
    <div class="relative max-w-5xl mx-auto">
      <!-- Main screenshot container -->
      <div class="relative rounded-2xl overflow-hidden card-shadow-lg bg-white p-2">
        <div class="rounded-xl overflow-hidden bg-gradient-to-br from-gray-100 to-gray-50">
          <img 
            src={screenshot.src} 
            alt="Victory Road Application Screenshot" 
            class="w-full h-auto"
            loading="lazy"
          />
        </div>
      </div>

      <!-- Feature callouts -->
      <div class="absolute -left-4 top-1/4 hidden lg:block animate-float">
        <div class="bg-white rounded-lg card-shadow-lg p-4 max-w-xs">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-pokemon-gradient rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <div>
              <p class="font-semibold text-gray-800">Quick Entry</p>
              <p class="text-sm text-gray-600">Add cards instantly</p>
            </div>
          </div>
        </div>
      </div>

      <div class="absolute -right-4 top-1/3 hidden lg:block animate-float-delayed">
        <div class="bg-white rounded-lg card-shadow-lg p-4 max-w-xs">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-trainer-gradient rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div>
              <p class="font-semibold text-gray-800">Auto Validation</p>
              <p class="text-sm text-gray-600">Always tournament ready</p>
            </div>
          </div>
        </div>
      </div>

      <div class="absolute -left-4 bottom-1/4 hidden lg:block animate-float">
        <div class="bg-white rounded-lg card-shadow-lg p-4 max-w-xs">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-energy-gradient rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <div>
              <p class="font-semibold text-gray-800">PDF Export</p>
              <p class="text-sm text-gray-600">Official templates</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Feature highlights -->
    <div class="mt-16 grid md:grid-cols-3 gap-8 max-w-4xl mx-auto">
      <div class="text-center">
        <div class="text-3xl font-bold text-primary mb-2">60</div>
        <p class="text-gray-600">Card Deck Support</p>
      </div>
      <div class="text-center">
        <div class="text-3xl font-bold text-secondary mb-2">3</div>
        <p class="text-gray-600">Division Types</p>
      </div>
      <div class="text-center">
        <div class="text-3xl font-bold text-success mb-2">100%</div>
        <p class="text-gray-600">Tournament Compliant</p>
      </div>
    </div>
  </div>
</section>